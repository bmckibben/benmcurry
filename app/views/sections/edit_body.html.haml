#sections
  = simple_form_for(@section) do |f|
    = f.error_notification

    .form-inputs
      .row
        .col-xs-9
          %h5
            = @section.sequence
            = ". "
            = @section.title
        .col-xs-10
          = "Word Count #{@section.body.gsub(/<[^>]*>/ui,'').split.size}" unless @section.body.nil?
      .row
        .col-md-10.editor 
          = "Summary:" 
          = @section.summary 
          %br/
          .card

            = f.text_area :body, class: "section-body tinymce", label: false, data: { tinymce_target: 'input' }
        .col-md-2.attributes

          = "Story:"
          = @section.story_title
          %br/
          = "POV:"
          = @section.throughline
          %br
          = f.input :draft, as: :text
          %br
          = f.input :story_id, as: :hidden


          .card.section-notes
            .card-title Notes
              
            %ul.list-group.list-group-flush        
              - @section.section_notes.each do |note|
                %li.list-group-item
                  =note.note
          
          .form-actions.control-panel
            .row
              = f.button :submit, "Save", class: "btn btn-primary"
            .row           
              =link_to "Add Note", edit_note_modal_path(section_id: @section.id), data: { turbo_frame: "edit_note_modal" }, class: "btn btn-notes btn-primary"
            .row  
              =link_to "Add Footnote", edit_footnote_modal_path(section_id: @section.id), remote: true, class: "btn btn-primary"          
            .row  
              =link_to "Workbook", workbook_path(story_id: @section.story_id), class: "btn btn-primary" unless @section.story_id.nil?
      .row   
        .col-md-9.footnotes
          - @section.section_footnotes.order(:a_number).each do |footnote|
            %sup
              =link_to edit_footnote_modal_path(footnote_id: footnote.id), remote: true do
                =footnote.a_number 
            =footnote.footnote
            %br
        .col-md-3

= tinymce

:javascript
  $( document ).ready(function() {
    $("#open-modal").click(function(){
      $("#edit_footnote_modal_box").modal("show");
    })
  })
  
