- content_for :head do
  = javascript_import_module_tag "sections"

#sections
  = simple_form_for(@section) do |f|
    = f.error_notification

    .form-inputs
      .row
        .col-xs-9
          %h5
            = @section.sequence
            = ". "
            = @section.title
        .col-xs-10
          = "Word Count #{@section.body.gsub(/<[^>]*>/ui,'').split.size}" unless @section.body.nil?
      .row
        .col-md-10.editor 
          = "Summary:" 
          = @section.summary 
          %br/
          .card.card__editor

            = f.text_area :body, class: "section-body tinymce", label: false, data: { tinymce_target: 'input' }
        .col-md-2.attributes

          = "Story:"
          = @section.story_title
          %br/
          = "POV:"
          = @section.throughline
          %br
          = f.input :draft, as: :text
          %br
          = f.input :story_id, as: :hidden


          .card.section-notes
            .card-title Notes
              
            %ul.list-group.list-group-flush        
              - @section.section_notes.each do |note|
                %li.list-group-item
                  =note.note
          
          .form-actions.control-panel
            .row
              = f.button :submit, "Save", class: "btn btn-primary"
            .row           
              =link_to "Add Note", new_section_note_path(section_id: @section.id), class: "btn btn-notes btn-primary", data: {turbo_frame: "modal"}, id:"btn_add_note"
            .row  
              =link_to "Add Footnote", new_section_footnote_path(section_id: @section.id), class: "btn btn-primary",  data: {turbo_frame: "modal"}, id:"btn_add_footnote"          
            .row  
              =link_to "Workbook", workbook_path(story_id: @section.story_id), class: "btn btn-primary" unless @section.story_id.nil?
            .row 
              =link_to 'Black Background', 'javascript:void(0)', id: 'add-make',  class: "btn btn-primary", onclick: 'change_edit_style()'
      .row
        .col-md-1   
        .col-md-9.footnotes
          - @section.section_footnotes.order(:a_number).each do |footnote|
            %sup
              =link_to edit_section_footnote_path(footnote_id: footnote.id), data: {turbo_frame: "modal"}, class:"btn_edit_footnote" do
                =footnote.a_number 
            =footnote.footnote
            %br
        .col-md-2
          =link_to 'Changes', 'javascript:void(0)', id: 'add-make', onclick: 'change_edit_style()'

= tinymce skin: "tinymce-5-dark"

:javascript

  window.frames['section_body_ifr'].onload = function(){
    change_edit_style();
  }

  function change_edit_style() {

    window.frames['section_body_ifr'].contentDocument.getElementById('tinymce').style.background = "#000";
    window.frames['section_body_ifr'].contentDocument.getElementById('tinymce').style.color = "#fff";
    window.frames['section_body_ifr'].contentDocument.getElementById('tinymce').style.fontFamily = "Courier New";
    
  }
