<%= form_with(model: wiki) do |form| %>
  <% if wiki.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(wiki.errors.count, "error") %> prohibited this wiki from being saved:</h2>

      <ul>
        <% wiki.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.number_field :user_id %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :parent, style: "display: block" %>
    <%= form.number_field :parent %>
  </div>

  <div>
    <%= form.label :version, style: "display: block" %>
    <%= form.text_field :version %>
  </div>

  <div>
    <%= form.label :integer, style: "display: block" %>
    <%= form.text_field :integer %>
  </div>

  <div>
    <%= form.label :deleted, style: "display: block" %>
    <%= form.check_box :deleted %>
  </div>

  <div>
    <%= form.label :default_sort, style: "display: block" %>
    <%= form.number_field :default_sort %>
  </div>

  <div>
    <%= form.label :last_revision, style: "display: block" %>
    <%= form.datetime_field :last_revision %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
